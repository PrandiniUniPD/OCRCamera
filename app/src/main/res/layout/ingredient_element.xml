<?xml version="1.0" encoding="utf-8"?>

<!-- single ingredient element inside IngredientsActivity layout (author Francesco Pham) -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ingredient_view"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Name -->
    <TextView
        android:id="@+id/inci_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="italic"
        android:padding="5sp"/>

    <!-- description -->
    <TextView
        android:id="@+id/description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description_title"
        android:layout_below="@id/inci_name_view"
        android:layout_alignParentStart="true"
        android:textSize="15sp"
        android:textStyle="bold"
        android:padding="5sp"/>
    <TextView
        android:id="@+id/description_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description_title"
        android:layout_alignParentStart="true"
        android:textSize="15sp"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"/>

    <!-- function -->
    <TextView
        android:id="@+id/function_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/function_title"
        android:layout_below="@id/description_view"
        android:layout_alignParentStart="true"
        android:textSize="15sp"
        android:textStyle="bold"
        android:padding="5sp"/>
    <TextView
        android:id="@+id/function_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/function_title"
        android:layout_alignParentStart="true"
        android:textSize="15sp"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"/>

</RelativeLayout>

